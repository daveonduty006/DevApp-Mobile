<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true"
    android:background="#4A6AA1">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/greeting_txtview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bonjour"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="28sp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/institution_txtview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hyperlink"
            android:textColorLink="#0000EE"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/greeting_txtview"
            app:layout_constraintBottom_toBottomOf="@id/form_tableview"
            app:layout_constraintVertical_bias=".1"/>

        <TableLayout
            android:id="@+id/form_tableview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/institution_txtview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".2"
            android:layout_margin="10dp"
            android:background="@drawable/border">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/lastname_txtview"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <EditText
                    android:id="@+id/lastname_edittxt"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:inputType="text"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_edittext"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/firstname_txtview"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <EditText
                    android:id="@+id/firstname_edittxt"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_edittext"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/gender_txtview"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/gender"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/border"/>
                <RadioGroup
                    android:id="@+id/gender_radiogrp"
                    android:layout_column="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/background_edittext">
                    <RadioButton
                        android:id="@+id/male_radiobtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"
                        android:text="Homme"/>
                    <RadioButton
                        android:id="@+id/female_radiobtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:textAlignment="textStart"
                        android:layout_gravity="start"
                        android:text="Femme"/>
                </RadioGroup>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/job_txtview"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/job"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/border"/>
                <LinearLayout
                    android:layout_column="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="10dp">
                    <Spinner
                        android:id="@+id/job_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30dp"
                        android:background="@drawable/background_spinner"
                        android:layout_marginVertical="4dp"/>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/typeofwork_txtview"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/typeof_work"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/border"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/background_edittext">
                    <CheckBox
                        android:id="@+id/fulltime_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temps plein"/>
                    <CheckBox
                        android:id="@+id/parttime_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temps partiel"/>
                    <CheckBox
                        android:id="@+id/oncall_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Occasionnel"/>
                    <CheckBox
                        android:id="@+id/intern_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Journalier"/>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/comment_txtview"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/comments"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/border"/>

                <EditText
                    android:id="@+id/comment_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:inputType="text"
                    android:minHeight="150dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_edittext"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Envoyer"
            app:layout_constraintTop_toBottomOf="@id/form_tableview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cancel_btn"
            android:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Effacer"
            app:layout_constraintTop_toBottomOf="@id/form_tableview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintLeft_toRightOf="@id/send_btn"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/black"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>